.weui-flex__item {
  border-radius: 20rpx;
  margin: 30rpx 15rpx 0 15rpx;
  text-align: center;
  background-color: #fff;
  line-height: 200rpx;
  color: #000;
  border: 1px solid #f3f3f3;
  box-shadow: 5rpx 5rpx 3rpx #888;
}

.swiper-container image {
  height: 100%;
  width: 100%;
}

.swiper-container {
  box-shadow: 0px 5rpx 10px #888;
  height: 450rpx;
  margin-bottom: 20rpx;
}

.container {
  text-align: center;
  position: relative;
}

.footer {
  margin-top: 50rpx;
  height: 210rpx;
  width: 200rpx;
}

.content {
  background-color: #f3f3f3;
}

.swiper_container {
  height: 55rpx;
  width: 80vw;
}

.weui-grid__icon {
  margin: 0 auto;
  line-height: 200rpx;
  padding-top: 10px;
}

.swiper_item {
  padding-left: 20rpx;
  text-align: left;
  font-size: 25rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  letter-spacing: 2px;
}

.weui-grid {
  border-left: 1rpx solid #d9d9d9;
  width: 50%;
  height: 250rpx;
}

.weui-grids {
  border-radius: 30rpx;
  box-shadow: 0 0 50rpx 0 hsla(0, 0%, 71%, 0.24);
}

.shandow {
  top: 0;
  position: fixed;
  z-index: 999;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.3);
  display: flex;
  justify-content: center;
  align-items: center;
  overflow: hidden;
}

.modal {
  text-align: center;
  width: 60%;
  background-color: #fff;
  border-radius: 20rpx;
  box-shadow: 0 0 50rpx 0 hsla(0, 0%, 71%, 0.24);
  padding: 20rpx 30rpx;
}

.btn {
  margin-top: 30rpx;
  border-radius: 100rpx;
  width: 40%;
  border: none;
  background-color: #19be6b;
  color: #fff;
}

.btn-content {
  margin-top: 20rpx;
}

.title {
  border-bottom: 1px solid #eee;
}
