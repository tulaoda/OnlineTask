<view class="container">
  <view class="userinfo">
    <button wx:if="{{!hasUserInfo && canIUse}}" open-type="getUserInfo" bindgetuserinfo="getUserInfo" class='getPower'>
      <view class='getText'>点击授权</view>
      <!-- <image class='btnImg' src='../../images/power.png'></image> -->
    </button>
    <block wx:else>
      <image bindtap="bindViewTap" class="userinfo-avatar" src="{{userInfo.avatarUrl}}" mode="cover"></image>
      <text class="userinfo-nickname">{{userInfo.nickName}}</text>
    </block>
  </view>

  <i-panel>
    <i-input value="{{ value1 }}" title="真实姓名" autofocus placeholder="名字" type="textarea" />
    <i-input value="{{ value2 }}" type="number" title="联系电话" placeholder="请输入手机号" />
    <i-input value="{{ value3 }}" type="textarea" title="详细地址" placeholder="请输入详细地址(最多50字)" maxlength="50" />
    <i-input value="{{ value4 }}" type="textarea" title="支付宝号" placeholder="请输入支付宝号" />
    <i-input value="{{ value5 }}" type="textarea" title="微信号" placeholder="请输入微信号" />
  </i-panel>
  <i-button bind:click="saveUserInfo" type="success" shape="circle" size="small" class="btn">
    提交
  </i-button>
</view>