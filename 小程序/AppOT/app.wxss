/**app.wxss**/
@import 'style/weui.wxss';

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: stretch;
  justify-content: space-between;
  box-sizing: border-box;
  /* box-shadow: 0 2px 20px 4px #e9e9e9; */
}

button[type=default] {
  color: #000;
  background-color: #fff;
  border: none !important;
}

.weui-navbar__slider {
  width: 3em;
  /* background-color: #000; */
  margin: 0 2.5em;
}

.weui-navbar__item.weui-bar__item_on {
  /* color: #000000; */
}

.weui-form-preview:not(:first-child) {
  margin: 20rpx 0;
}

.weui-tab__content {
  background-color: #f3f3f3;
}

.picker-input {
  text-align: center;
}

/* 任务多行显示溢出处理*/

.task_content {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.nodata-img {
  display: block;
  margin: auto;
  width: 250rpx;
  height: 210rpx;
  margin-bottom: 20rpx;
}

.nodata-content {
  height: 100%;
  color: #666;
  text-align: center;
  margin-top: 50rpx;
  font-size: 14px;
}
